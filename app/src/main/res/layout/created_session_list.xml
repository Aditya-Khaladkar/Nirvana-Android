<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="9dp">

    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/mySessionListCityRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mySessionEventImage"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/mySessionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 over cricket match"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_calendar_month_24" />

            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/mySessionEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:15 - 08/04/23"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_location_on_24" />

            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/mySessionEventAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baner, Pune"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="delete session"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>